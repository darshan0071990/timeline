extends layout
block content
    br
    br
    .row
        .col-xs-12
            .col-md-9.col-md-offset-1
                form(method='POST' action='/project/createproject')
                    div.form-group.col-sm-6
                        label(for='name') Project Name:
                        input#name.form-control.col-xs-6(type='text', placeholder='Project Name' name='name')
                    .row
                        div.form-group.col-sm-6
                            label(for='color') Project Color:
                            input.form-control(type='text' value="" name='color', placeholder='Color' data-palette='["#D50000","#304FFE","#00B8D4","#00C853","#FFD600","#FF6D00","#FF1744","#3D5AFE","#00E5FF","#00E676","#FFEA00","#FF9100","#FF5252","#536DFE","#18FFFF","#69F0AE","#FFFF00","#FFAB40"]')
                    div.form-group.col-sm-6
                        button.btn.btn-primary(type='submit') Save

        script.
            $('[name="color"]').paletteColorPicker({
                insert: 'after',
                clear_btn: 'last',
                position: 'downside', // default -> 'upside'
                close_all_but_this: true // Default is false
            });
